<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundfinal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.mobieleproject.GreetingActivity" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:src="@drawable/vaarwelfoto" />

        <Button
            android:id="@+id/buttonReturn"
            android:layout_width="250px"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/imageView1"
            android:layout_alignRight="@+id/textVoornaamAchternaam"
            android:layout_marginBottom="33dp"
            android:layout_marginRight="32dp"
            android:onClick="returnToQR"
            android:text="Keer terug" />

        <TextView
            android:id="@+id/textVoornaamAchternaam"
            android:layout_width="350px"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/imageView1"
            android:layout_marginTop="67dp"
            android:layout_toRightOf="@+id/imageView1"
            android:gravity="center"
            android:text="Voornaam_Achternaam"
            android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
